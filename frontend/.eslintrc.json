{
  "env": {
    "es2021": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react" ],
  "rules": {
    "react/jsx-indent": [2, 2],
    "indent": ["error", 2],
    "jsx-quotes": ["error", "prefer-single"]
  }
}
